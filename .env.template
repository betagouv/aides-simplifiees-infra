# Aides Simplifiées Infrastructure - Environment Variables Template
# Copy this file to .env and customize values for your environment

# Application Environment
APP_NAME=Aides Simplifiées
APP_ENV=production
NODE_ENV=production
LOG_LEVEL=info
HOST=0.0.0.0
PORT=3333
SESSION_DRIVER=cookie

# Database Configuration
DB_HOST=db
DB_PORT=5432
DB_USER=aides-simplifiees
DB_DATABASE=aides-simplifiees
DB_PASSWORD=change-me-secure-database-password

# Application Security
APP_KEY=change-me-with-32-chars-key-here
ADMIN_LOGIN=admin@beta.gouv.fr
ADMIN_PASSWORD=change-me-secure-admin-password

# Monitoring
MONITORING_SECRET=change-me-monitoring-secret

# Matomo Analytics (required, only active when APP_ENV=production)
MATOMO_URL=https://stats.data.gouv.fr
MATOMO_TOKEN=your-matomo-token
MATOMO_SITE_ID=199

# External Services
LEXIMPACT_URL=http://leximpact:3000
OPENFISCA_URL=http://openfisca:5000/calculate

# Docker image versions for production
MAIN_APP_TAG=latest
OPENFISCA_TAG=latest
LEXIMPACT_TAG=latest

# Required by main app
PUBLIC_APP_URL=https://aides.beta.numerique.gouv.fr